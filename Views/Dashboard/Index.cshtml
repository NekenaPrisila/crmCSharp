@using CRMSharp.ViewModels
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="text-center">
    <h1 class="display-4">Bienvenue sur le Dashboard</h1>
    <p>Gérez vos tickets, leads et clients efficacement.</p>
</div>

<div class="mt-5">
    <h3>Totaux</h3>
    <div class="row">
        <!-- Tickets -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('ticketDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Tickets</h5>
                        <p class="card-text display-4">@Model.TotalTickets</p>
                    </div>
                    <i class="fas fa-ticket-alt fa-3x text-primary"></i>
                </div>
            </div>
        </div>
        <!-- Leads -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('leadDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Leads</h5>
                        <p class="card-text display-4">@Model.TotalLeads</p>
                    </div>
                    <i class="fas fa-user-plus fa-3x text-success"></i>
                </div>
            </div>
        </div>
        <!-- Clients -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('customerDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text display-4">@Model.TotalCustomers</p>
                    </div>
                    <i class="fas fa-users fa-3x text-warning"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Section Graphiques -->
<div class="mt-5">
    <h3>Graphiques</h3>
    <div class="row">
        <!-- Graphique des Tickets -->
        <div class="col-md-4">
            <canvas id="ticketChart" width="600" height="400"></canvas>
        </div>
        <!-- Graphique des Leads -->
        <div class="col-md-4">
            <canvas id="leadChart" width="600" height="400"></canvas>
        </div>
        <!-- Graphique des Clients -->
        <div class="col-md-4">
            <canvas id="customerChart" width="600" height="400"></canvas>
        </div>
    </div>
</div>

<!-- Section Détails -->
<div class="mt-5">
    <h3>Détails</h3>

    <!-- Tickets -->
    <div id="ticketDetails" class="mb-4 details-section" style="display: none;">
        <h4>Tickets</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Subject</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Customer</th>
                    <th>Assigned Employee</th>
                    <th>Expense</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td>@ticket.Id</td>
                        <td>@ticket.Subject</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.Customer</td>
                        <td>@ticket.AssignedEmployee</td>
                        <td>
                            <span class="expense-value">@ticket.Expense</span>
                            <input type="number" class="expense-input" value="@ticket.Expense" style="display: none;" data-ticket-id="@ticket.Id" />
                        </td>
                        <td>
                            <a href="#" class="btn btn-warning btn-sm me-5 edit-btn" data-ticket-id="@ticket.Id">
                                <i class="fas fa-edit"></i> <!-- Icône pour Modifier -->
                            </a>
                            <a href="#" class="btn btn-success btn-sm save-btn" data-ticket-id="@ticket.Id" style="display: none;">
                                <i class="fas fa-save"></i> <!-- Icône pour Enregistrer -->
                            </a>
                            <a href="@Url.Action("DeleteTicket", "Dashboard", new { id = ticket.Id })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> <!-- Icône pour Supprimer -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Leads -->
    <div id="leadDetails" class="mb-4 details-section" style="display: none;">
        <h4>Leads</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Customer</th>
                    <th>Assigned Employee</th>
                    <th>CreatedAt</th>
                    <th>Expense</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lead in Model.Leads)
                {
                    <tr>
                        <td>@lead.Id</td>
                        <td>@lead.Status</td>
                        <td>@lead.Customer</td>
                        <td>@lead.AssignedEmployee</td>
                        <td>@lead.CreatedAt</td>
                        <td>@lead.Expense</td>
                        <td>
                            <a href="@Url.Action("EditLead", "Dashboard", new { id = lead.Id })" class="btn btn-warning btn-sm me-5">
                                <i class="fas fa-edit"></i> <!-- Icône pour Modifier -->
                            </a>
                            <a href="@Url.Action("DeleteLead", "Dashboard", new { id = lead.Id })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> <!-- Icône pour Supprimer -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Clients -->
    <div id="customerDetails" class="mb-4 details-section" style="display: none;">
        <h4>Clients</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Country</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Country</td>
                        <td>@customer.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script pour les graphiques -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Graphique des Tickets
    var ticketCtx = document.getElementById('ticketChart').getContext('2d');
    var ticketChart = new Chart(ticketCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Tickets.Select(t => t.Subject))),
            datasets: [{
                label: 'Dépenses par Ticket',
                data: @Html.Raw(Json.Serialize(Model.Tickets.Select(t => t.Expense))),
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Dépenses (€)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Tickets'
                    }
                }
            }
        }
    });

    // Graphique des Leads
    var leadCtx = document.getElementById('leadChart').getContext('2d');
    var leadChart = new Chart(leadCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Leads.Select(l => l.Status))),
            datasets: [{
                label: 'Dépenses par Lead',
                data: @Html.Raw(Json.Serialize(Model.Leads.Select(l => l.Expense))),
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Dépenses (€)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Leads'
                    }
                }
            }
        }
    });

    // Graphique des Clients
    var customerCtx = document.getElementById('customerChart').getContext('2d');
    var customerChart = new Chart(customerCtx, {
        type: 'bar',
        data: {
            labels: ['Clients'],
            datasets: [{
                label: 'Nombre de Clients',
                data: [@Model.TotalCustomers],
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Fonction pour basculer entre les sections de détails
    function toggleSection(sectionId) {
        var sections = document.querySelectorAll('.details-section');
        sections.forEach(function(section) {
            section.style.display = "none";
        });

        var section = document.getElementById(sectionId);
        if (section.style.display === "none") {
            section.style.display = "block";
        } else {
            section.style.display = "none";
        }
    }

    // Gestion de la modification des dépenses
    document.addEventListener('DOMContentLoaded', function () {
        // Gestion du clic sur le bouton "Modifier"
        document.querySelectorAll('.edit-btn').forEach(function (editBtn) {
            editBtn.addEventListener('click', function (e) {
                e.preventDefault();
                var ticketId = this.getAttribute('data-ticket-id');
                var expenseValue = document.querySelector('.expense-value[data-ticket-id="' + ticketId + '"]');
                var expenseInput = document.querySelector('.expense-input[data-ticket-id="' + ticketId + '"]');
                var saveBtn = document.querySelector('.save-btn[data-ticket-id="' + ticketId + '"]');

                // Basculer entre l'affichage du texte et l'affichage du champ de saisie
                expenseValue.style.display = 'none';
                expenseInput.style.display = 'inline-block';
                saveBtn.style.display = 'inline-block';
                this.style.display = 'none';
            });
        });

        // Gestion du clic sur le bouton "Enregistrer"
        document.querySelectorAll('.save-btn').forEach(function (saveBtn) {
            saveBtn.addEventListener('click', function (e) {
                e.preventDefault();
                var ticketId = this.getAttribute('data-ticket-id');
                var expenseInput = document.querySelector('.expense-input[data-ticket-id="' + ticketId + '"]');
                var newExpense = expenseInput.value;

                // Envoyer les données mises à jour via AJAX
                fetch('@Url.Action("UpdateTicketExpense", "Dashboard")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        id: ticketId,
                        expense: newExpense
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Mettre à jour l'affichage du montant de la dépense
                        var expenseValue = document.querySelector('.expense-value[data-ticket-id="' + ticketId + '"]');
                        expenseValue.textContent = newExpense;

                        // Masquer le champ de saisie et le bouton "Enregistrer"
                        expenseInput.style.display = 'none';
                        saveBtn.style.display = 'none';
                        document.querySelector('.edit-btn[data-ticket-id="' + ticketId + '"]').style.display = 'inline-block';
                    } else {
                        alert('Erreur lors de la mise à jour de la dépense.');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                });
            });
        });
    });
</script>

<style>
    .clickable-card {
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .clickable-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .clickable-card i {
        float: right;
        margin-top: 10px;
        color: #007bff;
    }

    .clickable-card:hover i {
        color: #0056b3;
    }

    .details-section {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .expense-input {
        width: 80px;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .save-btn {
        display: none;
    }
</style>