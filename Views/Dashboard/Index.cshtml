@using CRMSharp.ViewModels

@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="text-center">
    <h1 class="display-4">Bienvenue sur le Dashboard</h1>
    <p>Gérez vos tickets, leads et clients efficacement.</p>

    <!-- Lien vers la page de création de TauxAlerte -->
    <a href="/TauxAlerte/Create" class="btn btn-primary">Créer un Taux d'Alerte</a>
</div>

<div class="mt-5">
    <h3>Totaux</h3>
    <div class="row">
        <!-- Tickets -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('ticketDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Tickets</h5>
                        <p class="card-text display-4">@Model.TotalTickets</p>
                    </div>
                    <i class="fas fa-ticket-alt fa-3x text-primary"></i>
                </div>
            </div>
        </div>
        <!-- Leads -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('leadDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Leads</h5>
                        <p class="card-text display-4">@Model.TotalLeads</p>
                    </div>
                    <i class="fas fa-user-plus fa-3x text-success"></i>
                </div>
            </div>
        </div>
        <!-- Clients -->
        <div class="col-md-4">
            <div class="card clickable-card" onclick="toggleSection('customerDetails')">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text display-4">@Model.TotalCustomers</p>
                    </div>
                    <i class="fas fa-users fa-3x text-warning"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Section Graphiques -->
<div class="mt-5">
    <h3>Graphiques</h3>
    <div class="row">
        <!-- Graphique des Tickets -->
        <div class="col-md-4">
            <canvas id="ticketChart" width="600" height="400"></canvas>
        </div>
        <!-- Graphique des Leads -->
        <div class="col-md-4">
            <canvas id="leadChart" width="600" height="400"></canvas>
        </div>
        <!-- Graphique des Clients -->
        <div class="col-md-4">
            <canvas id="customerChart" width="600" height="400"></canvas>
        </div>
    </div>
</div>

<!-- Section Détails -->
<div class="mt-5">
    <h3>Détails</h3>

    <!-- Tickets -->
    <div id="ticketDetails" class="mb-4 details-section" style="display: none;">
        <h4>Tickets</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Subject</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Customer</th>
                    <th>Assigned Employee</th>
                    <th>Expence</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td>@ticket.Id</td>
                        <td>@ticket.Subject</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.Customer</td>
                        <td>@ticket.AssignedEmployee</td>
                        <td>@ticket.Expense</td>
                        <td>
                            <a href="@Url.Action("EditTicket", "Dashboard", new { id = ticket.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> <!-- Icône pour Modifier -->
                            </a>
                            <a href="@Url.Action("DeleteTicket", "Dashboard", new { id = ticket.Id })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> <!-- Icône pour Supprimer -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Leads -->
    <div id="leadDetails" class="mb-4 details-section" style="display: none;">
        <h4>Leads</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Customer</th>
                    <th>Assigned Employee</th>
                    <th>CreatedAt</th>
                    <th>Expence</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lead in Model.Leads)
                {
                    <tr>
                        <td>@lead.Id</td>
                        <td>@lead.Status</td>
                        <td>@lead.Customer</td>
                        <td>@lead.AssignedEmployee</td>
                        <td>@lead.CreatedAt</td>
                        <td>@lead.Expense</td>
                        <td>
                            <a href="@Url.Action("EditLead", "Dashboard", new { id = lead.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> <!-- Icône pour Modifier -->
                            </a>
                            <a href="@Url.Action("DeleteLead", "Dashboard", new { id = lead.Id })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> <!-- Icône pour Supprimer -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Clients -->
    <div id="customerDetails" class="mb-4 details-section" style="display: none;">
        <h4>Clients</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Country</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Country</td>
                        <td>@customer.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script pour les graphiques -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Graphique des Tickets
    var ticketCtx = document.getElementById('ticketChart').getContext('2d');
    var ticketChart = new Chart(ticketCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Tickets.Select(t => t.Subject))), // Noms des tickets
            datasets: [{
                label: 'Dépenses par Ticket',
                data: @Html.Raw(Json.Serialize(Model.Tickets.Select(t => t.Expense))), // Dépenses des tickets
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Dépenses (€)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Tickets'
                    }
                }
            }
        }
    });

    // Graphique des Leads
    var leadCtx = document.getElementById('leadChart').getContext('2d');
    var leadChart = new Chart(leadCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Leads.Select(l => l.Status))), // Statuts des leads
            datasets: [{
                label: 'Dépenses par Lead',
                data: @Html.Raw(Json.Serialize(Model.Leads.Select(l => l.Expense))), // Dépenses des leads
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Dépenses (€)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Leads'
                    }
                }
            }
        }
    });

    // Graphique des Clients (inchangé)
    var customerCtx = document.getElementById('customerChart').getContext('2d');
    var customerChart = new Chart(customerCtx, {
        type: 'bar',
        data: {
            labels: ['Clients'],
            datasets: [{
                label: 'Nombre de Clients',
                data: [@Model.TotalCustomers],
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    function toggleSection(sectionId) {
        // Masquer toutes les sections de détails
        var sections = document.querySelectorAll('.details-section');
        sections.forEach(function(section) {
            section.style.display = "none";
        });

        // Afficher ou masquer la section cliquée
        var section = document.getElementById(sectionId);
        if (section.style.display === "none") {
            section.style.display = "block";
        } else {
            section.style.display = "none";
        }
    }
</script>

<style>
    .clickable-card {
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .clickable-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .clickable-card i {
        float: right;
        margin-top: 10px;
        color: #007bff;
    }

    .clickable-card:hover i {
        color: #0056b3;
    }

    .details-section {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }
</style>

